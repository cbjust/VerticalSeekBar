<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="progressBarStyle_Vertical">
        <!-- android:indeterminateOnly. if true: progressbar automatic loop; false: manual-->
        <item name="android:indeterminateOnly">false</item> 
        <item name="android:indeterminate">false</item>
        <!-- set the height of seekbar(here i make vertical seekbar, you should think about the height that it is the height of original seekbar) -->
        <item name="android:minHeight">4dip</item> 
        <item name="android:maxHeight">4dip</item>
        <item name="android:thumbOffset">0dip</item>
        <item name="android:thumb">@drawable/seek_thumb</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
    </style>

</resources>